rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow all reads and writes for debugging purposes
    match /{document=**} {
      allow read, write: if true;
    }
  }
}

// Firebase Storage Rules (temporary public access)
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Allow public read and write access
      allow read, write: if true;
    }
  }
}